# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
# For local development:
# MONGO_URL="mongodb://localhost:27017"
# For MongoDB Atlas (production):
MONGO_URL="mongodb+srv://username:password@cluster0.mongodb.net"

# Database name
DB_NAME="portfolio_db"

# CORS Origins (comma-separated for multiple origins)
# Development: "*"
# Production: "https://your-domain.com,https://www.your-domain.com"
CORS_ORIGINS="*"

# Chatbase Configuration
# Chatbase Chatbot ID (from your Chatbase dashboard)
CHATBASE_CHATBOT_ID="gWvWe8QFeq_IVVm0vDONf"

# Environment
ENVIRONMENT="development"

# Port
PORT=5000